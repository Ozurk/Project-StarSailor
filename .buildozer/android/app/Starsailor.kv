#:kivy 2.3.0
#:import utils kivy.utils

<Starsailor>:
    id: Root_Layout
    canvas.before:
        Color:
            rgba: (.15, .05, .15, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    cols: 1
    rows: 3
    BoxLayout:
        id: top_toolbar
        size_hint_y: .25
        width: root.width
        orientation: "horizontal"
        BoxLayout:
            size_hint: .15, 1
            orientation: "horizontal"
            Image:
                source: "pictures/active/Starsailor_HELP.png"
        BoxLayout:
            orientation: "horizontal"
            Image:
                source: "pictures/active/Starsailor_Banner.png"
                allow_stretch: True
                keep_ratio: False
                size_hint: 1, 1
                size: self.texture_size
            BoxLayout:
                size_hint: .15, 1
                orientation: "horizontal"
                Image:
                    source: "pictures/active/Starsailor_MENU.png"
    BoxLayout:
        orientation: "vertical"
        id: ActiveFrame
        Image:
            source: "pictures/active/coverphoto.jpg"
            size: self.texture_size
            keep_ratio: False
            allow_stretch: True
            size: self.texture_size
    BoxLayout:
        id: Bottom_Tool_Bar
        size_hint_y: .25
        orientation: "horizontal"
        Button:
            text: "New Game"
            on_release: root.create_new_game()
        Button:
            text: "Load Game"
        Button:
            text: "Help"

<Boat>:
    source: "pictures/Morgans Pictures/boat.png"   

<Planet>:
    size_hint: None, None
    canvas.after:
        Color:
            rgba: .95, 0.1, .3, 1
        Ellipse:
            size: self.size
            pos: self.pos

<MainGameWindow>:
    ship: ship
    Label:
        size: 2000, 1000
        size_hint: None, None
        Planet:
            size_hint: .25, .25
            pos: 450, 70
        Planet:
            size_hint: .25, .25
            pos: 500, 700
        Planet:
            size_hint: .3, .3
            pos: 400, 400
            canvas.after:
                Color:
                    rgba: 1, 1, 0, 1
        Boat:
            size_hint: .25, .25
            pos: 10, 10
            id: ship
