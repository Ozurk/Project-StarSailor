#:kivy 2.3.0
#:import utils kivy.utils

<Starsailor>:
    StartMenu:
    Map:
    HForgeFactory:
    HForgeTopDown:
    MainStore:
    RustyLightWelderAside:


<StartMenu>
    name: "StartMenu"
    GridLayout:
        id: Root_Layout
        canvas.before:
            Color:
                rgba: (.15, .05, .15, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        cols: 1
        rows: 3
        TopButtons:
        Image:
            source: "pictures/GUI/coverphoto.jpg"
            size_hint: 1, .7
            keep_ratio: False
            allow_stretch: True
            size: self.texture_size
        BoxLayout:
            id: Bottom_Tool_Bar
            size_hint_y: .25
            orientation: "horizontal"
            Button:
                id: new_game_button
                text: "New Game"
                on_press: app.root.current = "Map"
            Button:
                text: "Load Game"
                on_press: app.root.current = "HForgeTopDown"
            Button:
                text: "Help"
        
<TopButtons>
    id: main_menu_top_buttons
    size_hint: 1, .20
    orientation: "horizontal"
    Image:
        source: "pictures/GUI/Starsailor_HELP.png"
        size_hint: .15, 1
    Image:
        source: "pictures/GUI/Starsailor_Banner.png"
        allow_stretch: True
        keep_ratio: False
        size_hint: .7, 1
        size: self.texture_size
    Image:
        source: "pictures/GUI/Starsailor_MENU.png"
        size_hint: .15, 1




<Boat>:
    source: "pictures/Boats/boat.png"







<Planet>:
    size_hint: None, None
    canvas.after:
        Color:
            rgba: .95, 0.1, .3, 1
        Ellipse:
            size: self.size
            pos: self.pos

<Map>:
    name: "Map"
    BoxLayout:
        orientation: "vertical"
        TopButtons:
            size_hint_y: .2
        ScrollView:
            id: _map
            Image:
                source: "pictures/GUI/map.png"
                keep_ratio: False
                allow_stretch: True
                size: root.window_width * 5, root.window_height * 4
                size_hint: None, None
                Image:
                    source: "pictures/heavens forge/hforge.png"
                    size: 700, 700
                    pos: 500, 600
                    on_touch_down: if self.collide_point(*args[1].pos): app.root.current = "HForgeTopDown"
              
                Image:
                    size: 600, 600
                    pos: 1700, 700
                    source: "pictures/Hunters Pictures/Valdstafar.png"
                Planet:
                    size_hint: .25, .25
                    pos: 1500, 900
                Planet:
                    size_hint: .25, .25
                    pos: 100, 800

                Planet:
                    size_hint: .3, .3
                    pos: 400, 400
                    canvas.after:
                        Color:
                            rgba: 1, 1, 0, 1
                Boat:
                    size: 300, 300
                    id: ship



<HForgeTopDown>
    name: "HForgeTopDown"
    BoxLayout:
        orientation: "vertical"
        Image:
            source: "pictures/heavens forge/hforgelanding.png"
            keep_ratio: False
            allow_stretch: True
            id: hforgetopdownpng
            FloatLayout:
                size: hforgetopdownpng.size
            
                Image:
                    size_hint: .7, .7
                    source: "pictures/heavens forge/The forge.png"
                    pos_hint: {'right': 1, 'bottom': 1}
                    on_touch_down: if self.collide_point(*args[1].pos): app.root.current = "HForgeFactory"
            
                Image:
                    size_hint: .5, .5
                    source: "pictures/heavens forge/H forge store.png"
                    pos_hint: {'left': 1, 'top': 1}
                    on_touch_down: if self.collide_point(*args[1].pos): app.root.current = "HForgeStore"
                Button:
                    text: "Back to Map"
                    on_press:
                        app.root.transition.direction = 'right'  
                        app.root.current = "Map"
                    size_hint_y: .12
                    size_hint_x: .25
                    pos: 0, 0 
                
    
<MainStore>
    name: "MainStore"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: .2
            orientation: "horizontal"
            Image:
                source: "pictures/Market/The market header.png"
                allow_stretch: True
                keep_ratio: False
            Button:
                text: "Return to the Landing"
                font_size: 10
                size_hint_x: .2
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                orientation: "vertical"
                GridLayout:
                    id: store_grid
                    rows: 8
                    cols: 1
                GridLayout:
                    id: price_grid
                    rows: 8
                    cols: 1

            



<HForgeFactory>
    name: "HForgeFactory"
    Image:
        source: 'pictures/heavens forge/Heavens forge factory.png'
        RustyLightWelder:
            pos: 250, 250
            on_touch_down: if self.collide_point(*args[1].pos): app.root.current = "RustyLightWelderAside"
        LightWelder:
            size_hint: None, None
            pos: 60, 250
            size: 260, 160
        LightWelder:
            size_hint: None, None
            pos: 140, 200
            size: 150, 150
        LightWelder:
            size_hint: None, None
            pos: 278, 200
            size: 200, 200
        LightWelder:
            size_hint: None, None
            pos: 300, 90
            size: 250, 250
        Button:
            text: "Back to the Heaven's Forge Landing"
            on_press:
                app.root.current = "HForgeTopDown"
            size: 200, 100
            text_size: self.size
            halign: "center"
            valign: "middle"



<LightWelder>
    source: "pictures/heavens forge/inside the factory/lightwelder.png"
    


<RustyLightWelder>
    source: "pictures/heavens forge/inside the factory/Rusty light welder.png"

<RustyLightWelderAside>
    name: "RustyLightWelderAside"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: root.robot_dialoge
            size_hint_y: .3333
            font_size: 37
            text_size: self.size
            valign: "top"
            halign: "center"
        RustyLightWelder:
            size_hint_y: .6666
            on_touch_down: if self.collide_point(*args[1].pos): root.rusty_lightwelder_dialoge()
        Button:
            text: "Return to the factory floor"
            
            on_press:
                app.root.transition.direction = 'right' 
                app.root.current = "HForgeFactory"
            size_hint_y: .2