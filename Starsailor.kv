#:kivy 2.3.0
#:import utils kivy.utils

<Starsailor>
    canvas.before:
        Color:
            rgba: (.15, .05, .15, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    cols: 1
    rows: 3
    BoxLayout:
        size_hint_y: .35
        width: root.width
        orientation: "horizontal"
        BoxLayout:
            size_hint: .15, 1
            orientation: "horizontal"
            Image:
                source: "pictures/active/Starsailor_HELP.png"

        BoxLayout:
            orientation: "horizontal"
            Image:
                source: "pictures/active/Starsailor_Banner.png"
                allow_stretch: True
                keep_ratio: False
                size_hint: 1, 1
                size: self.texture_size
            BoxLayout:
                size_hint: .15, 1
                orientation: "horizontal"
                Image:
                    source: "pictures/active/Starsailor_MENU.png"
    BoxLayout:
        orientation: "vertical"
        id: ActiveFrame
        Image:
            source: "pictures/active/coverphoto.jpg"
            size: self.texture_size
            keep_ratio: False
            allow_stretch: True
            size: self.texture_size

    BoxLayout:
        id: Bottom_Tool_Bar
        size_hint_y: .25
        orientation: "horizontal"
        Button:
            text: "New Game"
            on_press: root.create_new_game()
        Button:
            text: "Load Game"
        Button:
            text: "Help"



