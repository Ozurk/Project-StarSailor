#:kivy 2.3.0
#:import utils kivy.utils

<Starsailor>
    id: Root_Layout
    canvas.before:
        Color:
            rgba: (.15, .05, .15, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    cols: 1
    rows: 3
    BoxLayout:
        id: top_toolbar
        size_hint_y: .35
        width: root.width
        orientation: "horizontal"
        BoxLayout:
            size_hint: .15, 1
            orientation: "horizontal"
            Image:
                source: "pictures/active/Starsailor_HELP.png"

        BoxLayout:
            orientation: "horizontal"
            Image:
                source: "pictures/active/Starsailor_Banner.png"
                allow_stretch: True
                keep_ratio: False
                size_hint: 1, 1
                size: self.texture_size
            BoxLayout:
                size_hint: .15, 1
                orientation: "horizontal"
                Image:
                    source: "pictures/active/Starsailor_MENU.png"
    BoxLayout:
        orientation: "vertical"
        id: ActiveFrame
        Image:
            source: "pictures/active/coverphoto.jpg"
            size: self.texture_size
            keep_ratio: False
            allow_stretch: True
            size: self.texture_size

    BoxLayout:
        id: Bottom_Tool_Bar
        size_hint_y: .25
        orientation: "horizontal"
        Button:
            text: "New Game"
            on_press: root.create_new_game()
        Button:
            text: "Load Game"
        Button:
            text: "Help"


<IntroScreen>
    orientation: "vertical"
    Label:
        text: """Greetings! Welcome to Starsailor. Here is a lot of text, there is  lot here! """
    Button:
        size_hint_y: .15
        text: "Continue"
        on_release: app.root_widget.proceed_to_heavens_forge()



<HeavensForge>  
    Planet:
        pos: root.width * .9, root.height / 4
        size_hint: None, None
        size: 100, 400
        id: planetid
    Boat:
        size_hint: .25, .25
        pos: 0, 0
        id: ship
    Button:
        size_hint: 1, .15
        on_press: root.intro_animation()
   

<Boat>
    source: "pictures/Morgans Pictures/boat.png"   
    id: ship  


<Planet>
    canvas.after:
        Color:
            rgba: .95, 0.1, .3, 1
        Ellipse:
            size: self.size
            pos: self.pos
